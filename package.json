{
  "name": "regexplay",
  "version": "1.0.1",
  "description": "A command-line regex playground for real-time pattern testing with multiple regex engines",
  "main": "index.js",
  "type": "commonjs",
  "bin": {
    "regexplay": "./cli.js"
  },
  "scripts": {
    "test": "node test-comprehensive.js",
    "test:sessions": "node test-sessions.js",
    "test:highlighting": "node test-highlighting.js",
    "test:cli": "node test/test-app-cli.js",
    "test:all": "npm run test && npm run test:sessions && npm run test:highlighting && npm run test:cli",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "node cli.js",
    "dev": "node cli.js",
    "prepublishOnly": "npm run test:all && npm run lint",
    "release": "npm run test:all && npm run lint && npm version patch -m 'chore(release): %s' && git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Vaporjawn/RegexPlay.git"
  },
  "keywords": [
    "regex",
    "regexp",
    "regex-tester",
    "cli",
    "terminal",
    "pcre",
    "javascript",
    "pattern-matching",
    "command-line",
    "offline"
  ],
  "author": "Victor Williams",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Vaporjawn/RegexPlay/issues"
  },
  "homepage": "https://github.com/Vaporjawn/RegexPlay#readme",
  "dependencies": {
    "@syntropiq/libpcre-ts": "^1.3.1",
    "blessed": "^0.1.81"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "preferGlobal": true,
  "files": [
    "cli.js",
    "index.js",
    "src/",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "docs/README.md"
  ],
  "sideEffects": false,
  "devDependencies": {
    "eslint": "^9.36.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-promise": "^7.2.1"
  }
}
